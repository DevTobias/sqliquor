{
  // !Editor settings
  "cSpell.language": "en,de-de",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": { "source.fixAll": true },

  // !Explorer
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "package.json": ".gitignore,tsconfig.json,turbo.json,babel.config.js,docusaurus.config.js,.env.local,.env.template,.env.development,drizzle.config.ts,next.config.js,.env.production",
    "next.config.js": "next-env.d.ts",
    "Taskfile.yml": ".editorconfig,.gitignore",
    "index.ts": "migrate.ts,extension.ts",
    "*.tsx": "$(capture).*",
    "*.ts": "$(capture).*",
    "README.md": "LICENSE"
  },

  "files.exclude": {
    "**/bun.lockb": true,
    "**/yarn.lock": true,
    "**/node_modules": true,
    "**/.next": true,
    "**/.turbo": true
  },

  //! Language features

  // Typescript
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.preferences.importModuleSpecifier": "non-relative",

  // CSS
  "scss.lint.unknownAtRules": "ignore",

  // ESLint
  "eslint.validate": [
    "javascript",
    "typescript",
    "css",
    "typescriptreact",
    "javascriptreact"
  ],
  "eslint.probe": [
    "javascript",
    "typescript",
    "css",
    "typescriptreact",
    "javascriptreact"
  ],
  "eslint.workingDirectories": [
    "frontend/app",
    "backend/app",
    "backend/modules/elysia-helmet"
  ],

  //! Formatters
  "[json][jsonc][html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript][javascript]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
  }
}
